<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="#86BC25" android:startColor="#86BC25" />
            <stroke android:width="1dp" android:color="@color/colorPrimary" />
            <corners android:radius="3dp" />
            <padding android:bottom="5dp"  android:right="10dp" android:top="5dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:angle="90" android:endColor="@color/orange1" android:startColor="@color/blue2" />
            <stroke android:width="1dp" android:color="@color/colorPrimary" />
            <corners android:radius="3dp" />
            <padding android:bottom="5dp"  android:right="10dp" android:top="5dp" />
        </shape>
    </item>

